<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Cache-Control" content="no-cache" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <meta http-equiv="X-UA-Compatible" content="IE=EmulateIE11" />
    
    <title>@ViewBag.Title - DCS</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <input type="hidden" value="@(Request.Url.Scheme + "://" + Request.Url.Authority)/" id="hdSiteUrl" />
    
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/common.js"></script>*@

    @Scripts.Render("~/bundles/jquery")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/common.js"></script>
   
    @Styles.Render("~/content/sitecss")

    @*@Styles.Render("~/content/datatablecss")*@
    @*<link href="~/Content/dataTables.bootstrap.css" rel="stylesheet" />
        <link href="~/Content/dataTables.responsive.css" rel="stylesheet" />*@


    @Scripts.Render("~/bundles/globalization")
    
    @Scripts.Render("~/bundles/templatejs")
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/content/themes/base/datepickercss")
    @Scripts.Render("~/bundles/datepickerjs")

    @*@Scripts.Render("~/plugins/dataTables")*@
    <script src="~/Scripts/common.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
     
</head>
    

<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0" id="header">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <p class="navbar-brand">DCS</p>
            </div>
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
            {
                <ul class="nav navbar-top-links navbar-right">

                    <li class="dropdown">

                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out fa-fw"></i>Logout</a>
                            </li>
                        </ul>
                        <!-- /.dropdown-user -->
                    </li>
                    <!-- /.dropdown -->
                </ul>
            }
            <div>
                @Html.Partial("_Navigation")
            </div>

        </nav>
        <div id="page-wrapper">
            @RenderSection("featured", required: false)
            @RenderBody()
        </div>

        <!-- /#page-wrapper -->
    </div>

    @RenderSection("scripts", required: false)
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" data-backdrop="static" aria-hidden="true" style="text-align: center; ">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Add/Edit Project</h4>
                </div>
                <iframe height="113px" width="100%" src="" id="frmAction" style="border:0px;"></iframe>
            </div>
        </div>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" data-backdrop="static" aria-hidden="true" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                </div>
                <div id="ModalBody" class="modal-body">
                    ...
                </div>
                @*<div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>*@
            </div>
        </div>
    </div>

</body>
</html>
