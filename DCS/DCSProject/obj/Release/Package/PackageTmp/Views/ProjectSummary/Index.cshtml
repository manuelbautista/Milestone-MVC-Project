                        tmpHTML = tmpHTML + GetColorData(data[i].ProjectFinancial, data[i].ProjectFinancialModifiedDate);
                        tmpHTML = tmpHTML + GetColorData(data[i].ProjectOverAll, data[i].ProjectOverAllModifiedDate);
