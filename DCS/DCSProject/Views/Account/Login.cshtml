@model DCSProject.Models.LoginModel

@{
    Layout = "";
    ViewBag.Title = "Log in";
}
@Styles.Render("~/content/sitecss")
@Scripts.Render("~/bundles/templatejs")

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    <form>
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="E-mail" name="email" type="email" autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" name="password" type="password" value="">
                            </div>
                            @*<div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                </label>
                            </div>*@
                            <!-- Change this to a button or input when using this as a form -->
                            <a href="@Url.Action("index","project")" class="btn btn-lg btn-success btn-block">Login</a>
                            <a href="@Url.Action("forgotpassword","account")" class="btn btn-default btn-block">Forgot Password</a>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
