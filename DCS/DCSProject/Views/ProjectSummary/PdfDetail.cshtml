                if (data != null) {
                    SetScope(data.ScopeId);
                    SetSchedule(data.ScheduleId);
                    SetResource(data.ResourceId);
                    SetFinancial(data.FinancialId);
                    SetOverAllStatus(data.OverallStatusId);
