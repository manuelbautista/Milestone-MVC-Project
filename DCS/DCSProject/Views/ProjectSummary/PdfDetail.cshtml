                            newtable.find( '#summary-list' ).html(tmpCellHTML);
                            $( '.timeline' ).append( newtable );
                            tmpHeadHTML = "";
                            tmpCellHTML = "";
                        }

                    }
                   // $('#header-row-duration').html(tmpHeadHTML);
                //    $( '#summary-list' ).html( tmpCellHTML );

          

                }
